{
  "name": "nickyt-site",
  "type": "module",
  "version": "1.0.0",
  "description": "Nick Taylor's personal website built with Astro",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "npm run sass:process && npm run sass:watch & astro dev",
    "start": "npm run sass:process && astro dev",
    "build": "npm run sass:process && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "sass:tokens": "json-to-scss src/_data/tokens.json src/scss/_tokens.scss",
    "sass:process": "npm run sass:tokens && sass src/scss/global.scss public/styles/global.css --style=compressed",
    "sass:watch": "sass src/scss/global.scss public/styles/global.css --style=compressed --watch"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/netlify": "^6.6.3",
    "@astrojs/rss": "^4.0.14",
    "astro": "^5.16.6",
    "luxon": "^3.7.2",
    "marked": "^12.0.1",
    "remark-directive": "^4.0.0",
    "rss-parser": "^3.13.0",
    "stalfos": "github:hankchizljaw/stalfos#c8971d22726326cfc04089b2da4d51eeb1ebb0eb",
    "typescript": "^5.6.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tbranyen/jsdom": "^13.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.1",
    "json-to-scss": "^1.6.2",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "slugify": "^1.6.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickytonline/robust-petunia"
  },
  "keywords": [
    "astro",
    "blog",
    "personal-website"
  ],
  "author": "Nick Taylor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nickytonline/robust-petunia"
  },
  "homepage": "https://www.nickyt.co"
}
