---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="lg:sticky top-0 pt-6 pb-6 bg-white z-10 max-w-7xl mx-auto px-6">
  <div class="flex flex-col items-center md:items-start md:flex-row gap-6">
    <div class="flex flex-col gap-6 items-center md:items-start">
      <h1 class="font-heading md:text-6xl lg:text-8xl font-medium">
        nickyt<span class="text-pink-600">.</span>co
      </h1>
      <nav
        aria-label="main navigation"
        class="mt-2 text-xl md:text-2xl lg:text-3xl"
      >
        <ul class="list-none flex gap-6 place-content-center flex-wrap">
          <li>
            <a href="/" aria-current={currentPath === "" ? "page" : "false"}
              >Home</a
            >
          </li>
          <li>
            <a
              href="/blog"
              aria-current={currentPath.startsWith("blog") ? "page" : "false"}
            >
              Blog
            </a>
          </li>
          <li>
            <a
              href="/talks"
              aria-current={currentPath.startsWith("talks") ? "page" : "false"}
            >
              Talks
            </a>
          </li>
          <li class="relative group">
            <a href="#">Watch</a>
            <div
              class="absolute invisible opacity-0 transition-all duration-300 transform -translate-y-1 group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 group-focus-within:visible group-focus-within:opacity-100 group-focus-within:translate-y-0 right-0 md:right-auto md:left-0 z-20"
            >
              <ul
                class="mt-4 p-4 grid gap-4 border border-black [&_a]:block [&_a]:w-full [&_a]:whitespace-nowrap bg-white min-w-50 shadow-lg z-30"
              >
                <li>
                  <a href="/video-archive">Past Streams </a>
                </li>
                <li>
                  <a href="/guest-appearances">Guest Spots </a>
                </li>
                <li>
                  <a href="https://twitch.tv/nickytonline" target="_blank"
                    >Twitch</a
                  >
                </li>
                <li>
                  <a href="https://youtube.com/@nickytonline" target="_blank"
                    >YouTube</a
                  >
                </li>
                <li>
                  <a href="/2full2stack" target="_blank">2 Full 2 Stack </a>
                </li>
                <li>
                  <a href="/pomerium-live" target="_blank">Pomerium Live </a>
                </li>
              </ul>
            </div>
          </li>
          <li>
            <a href="https://onetipaweek.com" target="_blank">Newsletter</a>
          </li>
          <li>
            <a
              href="/socials"
              aria-current={currentPath === "socials" ? "page" : "false"}
            >
              Socials
            </a>
          </li>
          <li>
            <a
              href="/about"
              aria-current={currentPath === "about" ? "page" : "false"}
              >About
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
