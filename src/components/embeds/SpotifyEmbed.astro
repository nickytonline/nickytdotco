---
interface Props {
  uri: string; // Can be track, episode, playlist, etc.
  height?: string;
  theme?: string;
}

const { uri, height = "232", theme = "0" } = Astro.props;

const src = `https://open.spotify.com/embed/${uri}?utm_source=generator&theme=${theme}`;
---

<div class="max-w-4xl mx-auto" data-embed>
  <iframe
    class="w-full rounded-xl border-0"
    src={src}
    height={height}
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"
    title={`Spotify embed ${uri}`}></iframe>
</div>
