---
interface Props {
  uri: string; // Can be track, episode, playlist, etc.
  height?: string;
  theme?: string;
}

const { uri, height = "232", theme = "0" } = Astro.props;

const src = `https://open.spotify.com/embed/${uri}?utm_source=generator&theme=${theme}`;
---

<iframe
  style={`border-radius:12px`}
  src={src}
  width="100%"
  height={height}
  frameborder="0"
  allowfullscreen=""
  allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
  loading="lazy"
  title={`Spotify embed ${uri}`}></iframe>
