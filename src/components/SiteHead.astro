---
import { site } from "../data/site";
import Nav from "./Nav.astro";

export interface Props {
  currentPath?: string;
}

const { currentPath } = Astro.props;
---

<a
  class="sr-only focus:not-sr-only focus:absolute focus:left-0 focus:top-0 focus:m-base focus:inline-block focus:bg-(--color-action-bg) focus:text-(--color-action-text) focus:font-bold focus:no-underline focus:leading-none focus:px-500 focus:pt-300 focus:pb-base"
  href="#main-content"
>
  Skip to content
</a>
<header role="banner" class="pt-700">
  <div class="mx-auto max-w-232 px-500">
    <a
      href="/"
      class="leading-tight font-bold text-(--color-text) no-underline"
    >
      <span class="sr-only">{site.name} - Home</span>
      <span class="text-600" aria-hidden="true">{site.name}</span>
    </a>
    <Nav ariaLabel="navigation" currentPath={currentPath} />
  </div>
</header>
