---
interface Props {
  tag: string;
  count?: number;
  variant?: "default" | "muted";
}

const { tag, count, variant = "default" } = Astro.props;

const variantClasses = {
  default:
    "bg-rose-50 dark:bg-pink-900/30 text-pink-600 dark:text-pink-400 hover:bg-pink-600 hover:text-white dark:hover:bg-pink-500 dark:hover:text-white focus:bg-pink-600 focus:text-white",
  muted:
    "bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-700 dark:hover:text-white focus:bg-gray-200 focus:text-gray-900",
};

const countClasses = {
  default: "bg-pink-100 dark:bg-pink-800 text-pink-600 dark:text-pink-300",
  muted: "bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300",
};
---

<a
  href={`/tags/${tag.toLowerCase().replace(/\s+/g, "")}`}
  class={`inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-semibold focus:outline-none transition-colors ${variantClasses[variant]}`}
>
  {tag}

  {
    count && (
      <span
        class={`flex items-center justify-center w-5 h-5 rounded-full text-xs font-semibold ${countClasses[variant]}`}
      >
        {count}
      </span>
    )
  }
</a>
